# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
tab_width = 2
indent_size = 2
indent_style = space
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.mak]
indent_style = tab

[Makefile]
indent_style = tab

[*.py]
indent_size = 4
indent_style = space

[*.{yaml,yml,yml.j2,yaml.j2}]
indent_size = 2

[{Dockerfile}]
indent_size = 2

[*.conf]
indent_style = tab

[*.md]
max_line_length = off
indent_size = 1
trim_trailing_whitespace = false
